package me.fleezi.maohack.movement;

import org.lwjgl.input.Keyboard;

import me.fleezi.maohack.modules.Categories;
import me.fleezi.maohack.modules.Module;

public class Sprint extends Module {

	public Sprint() {
		super("Sprint", Categories.MOVEMENT, Keyboard.KEY_M);
	}
	
	@Override
	public void onPreUpdate() {
		super.onPreUpdate();
		
		if(mc.player.movementInput.field_192832_b > 0) { //field_192832_b means move forward i think?
			mc.player.setSprinting(true);
		}
	}

}
